@if (Request.IsAuthenticated)
{


    System.Globalization.CultureInfo ci = (System.Globalization.CultureInfo)this.Session["Culture"];
    string lang = ci.Name.Substring(0, 2);
     
    <li class="dir">
       @switch (lang)
       {
           case "uk":
              <text>Українська</text>
               break; 
           case "en":
              <text>English</text>
               break; 
           case "ru":
              <text>Русский</text>
               break;
       }      
        <ul>
        <li>
    @Html.ActionLink(" Українська ", "ChangeCulture", "Account",
        new { lang = "uk", returnUrl = this.Request.RawUrl }, null)
        </li>
        <li>
    @Html.ActionLink(" English ", "ChangeCulture", "Account",
       new { lang = "en", returnUrl = this.Request.RawUrl }, null)
       </li>
       <li>
    @Html.ActionLink(" Русский ", "ChangeCulture", "Account",
       new { lang = "ru", returnUrl = this.Request.RawUrl }, null)
       </li>
       </ul>
   </li>
}
