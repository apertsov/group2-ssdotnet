@model DiagnosticCenter.Models.ExaminationTemplate

@{
    ViewBag.Title = "Details";
    ViewBag.Controller = "ExaminationTemplates";
    ViewBag.Action = "ExaminationTemplates.Details";
}

<div id="icon-extempl-general" class="icon32"><br /></div><h2>@ExaminationRes.ExaminationStrings.ExaminationTemplate - @ExaminationRes.ExaminationStrings._Details</h2>
<p>
@Html.ActionLink(@ExaminationRes.ExaminationStrings._Edit, "Edit", new { id = Model.Id })
</p>
<fieldset>
    <legend>@ExaminationRes.ExaminationStrings.ExaminationTemplate</legend>

    <div class="display-label">@Html.LabelFor(model => model.Name)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">@Html.LabelFor(model => model.Body)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Body)
    </div>

    <div class="display-label">@Html.LabelFor(model => model.ExaminationTypeID_ExmType)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ExaminationType.Name)
    </div>

    <div class="display-label"> @Html.LabelFor(model => model.EmployeeID_Employee)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Employee.Surname)
        @Html.DisplayFor(model => model.Employee.FirstName)        
        @Html.DisplayFor(model => model.Employee.Patronymic)
    </div>

    <div class="display-label">@Html.LabelFor(model => model.IsPrivate)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.IsPrivate)
    </div>
</fieldset>



