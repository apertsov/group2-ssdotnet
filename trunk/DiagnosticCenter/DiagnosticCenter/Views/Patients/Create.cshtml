@model DiagnosticCenter.Models.Patient

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@{
    ViewBag.Controller = "Patients";
    ViewBag.Action = "Patients.Create";
}
<div class="patient">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <h2 align="center">Форма реєстрації пацієнта</h2>
    <table id="formholder">
        
        <tr>
            <td>
              @Html.Label("Ім'я:")
            </td>
            <td>
                @Html.EditorFor(model => model.FirstName, "i_FirstName")
                @Html.ValidationMessageFor(model => model.FirstName)
             </td>
        </tr>
        <tr>
            <td>
              @Html.Label("Прізвище:")
            </td>
            <td>
                @Html.EditorFor(model => model.Surname)
                @Html.ValidationMessageFor(model => model.Surname)
             </td>
        </tr>    
        <tr>
            <td>
              @Html.Label("По батькові:")
            </td>
            <td>
                @Html.EditorFor(model => model.Patronymic)
                @Html.ValidationMessageFor(model => model.Patronymic)
             </td>
        </tr>
         <tr>
            <td>
              @Html.Label("Стать:")<br />
            </td>
            <td>
                @Html.RadioButton("Sex","жіноча")&nbsp;жіноча
                @Html.RadioButton("Sex", "чоловіча")&nbsp;чоловіча
            </td>
        </tr>  
        <tr> 
            <td>
                @Html.Label("Дата народження:")
            </td>
            <td>
                @Html.EditorFor(model => model.BirthDate)
                @Html.ValidationMessageFor(model => model.BirthDate)
            </td>
        </tr>    
        <tr>
            <td>
              @Html.Label("Електронна адреса:")
            </td>
            <td>
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
             </td>
        </tr>           
        <tr> 
            <td>
                @Html.Label("Професія:")
            </td>
            <td>
                @Html.EditorFor(model => model.Specialty)
                @Html.ValidationMessageFor(model => model.Specialty)
            </td>
        </tr>    
        <tr> 
            <td>
                @Html.Label("Місто:")
            </td>
            <td>
                @Html.EditorFor(model => model.City)
                @Html.ValidationMessageFor(model => model.City)
            </td>
        </tr>    
        <tr> 
            <td>
                @Html.Label("Адреса:")
            </td>
            <td>
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </td>
        </tr>    
        <tr> 
            <td>
                @Html.Label("Телефон:")
            </td>
            <td>
                @Html.EditorFor(model => model.Phone)
                @Html.ValidationMessageFor(model => model.Phone)
            </td>
        </tr>    
        <tr> 
            <td class = "inputs">
                @Html.CheckBoxFor(model => model.Workplace)
            </td>
            <td>
                @Html.Label("Працевлаштований(-на)")
            </td>
        </tr>    
        <tr> 
            <td class = "inputs">
                @Html.CheckBoxFor(model => model.Civil_Servant)
            </td>
            <td>
                @Html.Label("Держслужбовець")
            </td>
        </tr>    
        <tr> 
            <td colspan = "2" align = "left">
                @Html.Label("Коментар")<br />
           
            
                @Html.TextAreaFor(model => model.Comment)
               <br />
                <input type="submit" value="Зареєструвати" />
            </td>
        </tr>    
    </table>
       
   
}
</div>
