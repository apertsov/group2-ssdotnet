@model DiagnosticCenter.Models.Patient

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm()) {
        <h3>Пошук пацієнтів</h3>
        <table>
            <tr>
                <td>
                    Ім'я:<br />
                    <input type = "text" name = "FirstName"/>
                </td>
                <td>
                    Прізвище:<br />
                    <input type = "text" name="Surname"/>
                </td>
            </tr>
            <tr>
                <td>
                    Дата народження:<br />
                     <input type = "text" name = "BirthDate"/>
                </td>
            </tr>
            <tr>
                <td>
                    Місто:<br />
                     <input type = "text" name="City"/>
                </td>
                <td>
                   Адреса:<br />
                     <input type = "text" name="Address"/>
                </td>
            </tr>
            <tr>
                <td>
                    Телефон:<br />
                     <input type = "text" name="Phone"/>
                </td>
                <td>
                   Електронна адреса:<br />
                     <input type = "text" name="Email"/>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <fieldset>
                        <legend>Додатково</legend>
                            <input type="checkbox" name = "worker" /> Працевлаштований(-на)<br />
                            <input type="checkbox" name = "civil"  /> Держслужбовець<br />
                        </fieldset>
                    <input type="checkbox" name = "optional" onclick="additional()" /> Включити в пошук додаткові опції<br /><br />
                    <input type="submit" value="Знайти" />
                </td>
            </tr>
        </table>
  
}

