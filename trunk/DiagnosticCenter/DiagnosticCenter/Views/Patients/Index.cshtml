@model IEnumerable<DiagnosticCenter.Models.Patient>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Specialty
        </th>
        <th>
            Address
        </th>
        <th>
            Phone
        </th>
        <th>
            Comment
        </th>
        <th>
            Workplace
        </th>
        <th>
            Civil_Servant
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Specialty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Workplace)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Civil_Servant)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID_Patient }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_Patient }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID_Patient })
        </td>
    </tr>
}

</table>
