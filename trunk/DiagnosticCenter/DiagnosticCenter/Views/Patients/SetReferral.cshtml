@model DiagnosticCenter.Models.Referral

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Referral</legend>

        <div class="editor-label">
            Дата створення:&nbsp;@DateTime.Now
        </div>
         <div class="editor-label">
            Дата призначення:@Html.TextBox("visit")
        </div>
        <div class="editor-label">
           Пацієнт: 
        </div>
        <div class="editor-field">
           @ViewBag.PatName &nbsp; @ViewBag.PatSurname  
        </div>

        <div class="editor-label">
           Лікар:@Html.TextBox("doctor")
        </div>
        <p>
           <input type="submit" value="Виписати" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
