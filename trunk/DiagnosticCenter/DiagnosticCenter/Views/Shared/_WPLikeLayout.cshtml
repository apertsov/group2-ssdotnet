<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/wp-theme/Styles.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/wp-theme/Colors.css")" rel="stylesheet" type="text/css" />    
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.hoverIntent.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/wp-theme/js/Scripts.js")" type="text/javascript"></script>
</head>
<body class="js admin-bar">
    <div id="wrap">
        <div id="header">        
            <div id="title">
                <a href="@Url.Content("~")"><img src="@Url.Content("~/Content/wp-theme/images/icon_first_aid.png")" alt="Logo"/></a>
                <span>Чернівецький Діагностичний Центр</span> 
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
        </div>
    
        <div id="adminmenuback"></div>
        <div id="adminmenuwrap">
            <div id="adminmenushadow"></div>
            @Html.Partial("_SideMenuPartial")
        </div>
        <div id="maincontent">
            <div class="inner">
                @RenderBody()
            </div>
        </div>
        <div id="footer">
            &copy Team2 2011
            <div class="clear"></div>
        </div>
    
    </div>
</body>
</html>
