@model PagedList.IPagedList<DiagnosticCenter.Models.Cabinet>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Додати кабінет", "Create")
</p>
<table>
    <tr>
        <th>
            Номер кабінету
        </th>
        <th>
            Номер телефону
        </th>
        <th>
            Опис
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id=item.ID_Cabinet }) |
            @Html.ActionLink("Деталі", "Details", new { id=item.ID_Cabinet }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.ID_Cabinet })
        </td>
    </tr>
}

</table>

<div> 
    Сторінка @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) з @Model.PageCount 
    &nbsp; 
    @if (Model.HasPreviousPage) 
    { 
        @Html.ActionLink("<<", "Index", new { page = 1,}) 
        @Html.Raw("&nbsp;"); 
        @Html.ActionLink("< Попередня", "Index", new { page = Model.PageNumber - 1 }) 
    } 
    else 
    { 
        @:<< 
        @Html.Raw("&nbsp;"); 
        @:< Попередня 
    } 
    &nbsp; 
    @if (Model.HasNextPage) 
    { 
        @Html.ActionLink("Наступна >", "Index", new { page = Model.PageNumber + 1}) 
        @Html.Raw("&nbsp;"); 
        @Html.ActionLink(">>", "Index", new { page = Model.PageCount}) 
    } 
    else 
    { 
        @:Наступна > 
        @Html.Raw("&nbsp;") 
        @:>> 
    } 
</div>

