@{
    ViewBag.Title = "Patients";
    ViewBag.Controller = "Patients";
    ViewBag.Action = "Patients.Search";
}

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm()) {
        <h3>@PatientsRes.PatientsStrings.FindPatients</h3>
        <table>
            <tr>
                <td>
                    @PatientsRes.PatientsStrings.Name<br />
                    <input type = "text" name = "FirstName"/>
                </td>
                <td>
                    @PatientsRes.PatientsStrings.Surname<br />
                    <input type = "text" name="Surname"/>
                </td>
            </tr>
            <tr>
                <td>
                    @PatientsRes.PatientsStrings.City<br />
                     <input type = "text" name="City"/>
                </td>
                <td>
                   @PatientsRes.PatientsStrings.Address<br />
                     <input type = "text" name="Address"/>
                </td>
            </tr>
            <tr>
                <td>
                    @PatientsRes.PatientsStrings.Phone<br />
                     <input type = "text" name="Phone"/>
                </td>
                <td>
                   @PatientsRes.PatientsStrings.Email<br />
                     <input type = "text" name="Email"/>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <fieldset>
                        <legend>@PatientsRes.PatientsStrings.Additional</legend>
                            <input type="checkbox" name = "worker" />@PatientsRes.PatientsStrings.Employed<br />
                            <input type="checkbox" name = "civil"  />@PatientsRes.PatientsStrings.CivilServant<br />
                        </fieldset>
                    <input type="checkbox" name = "optional" onclick="additional()" /> @PatientsRes.PatientsStrings.Include<br /><br />
                    <input type="submit" value=@PatientsRes.PatientsStrings.Find />
                </td>
            </tr>
        </table>
  
}

