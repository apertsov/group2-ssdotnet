@model DiagnosticCenter.Models.Cabinet

@{
    ViewBag.Title = ViewRes.CabinetsStrings.Cabinets + " - " + @ViewRes.CabinetsStrings.Edit;
    ViewBag.Controller = "Cabinets";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="icon-cabs-general" class="icon32"><br /></div><h2>@ViewRes.CabinetsStrings.Editing</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@ViewRes.CabinetsStrings.CabinetInfo</legend>

        @Html.HiddenFor(model => model.ID_Cabinet)

        <div class="editor-label">
            @ViewRes.CabinetsStrings.CabinetNo:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Number)
            @Html.ValidationMessageFor(model => model.Number)
        </div>

        <div class="editor-label">
            @ViewRes.CabinetsStrings.CabinetPhoneNo:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phone)
            @Html.ValidationMessageFor(model => model.Phone)
        </div>

        <div class="editor-label">
            @ViewRes.CabinetsStrings.Description:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <br />
        <p>
            <input type="submit" value="@ViewRes.CabinetsStrings.SaveChanges" class="yt-uix-button"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(ViewRes.CabinetsStrings.ReturnToCabsList, "Index")
</div>
