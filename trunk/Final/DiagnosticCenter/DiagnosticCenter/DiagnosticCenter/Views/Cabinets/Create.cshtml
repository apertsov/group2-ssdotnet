@model DiagnosticCenter.Models.Cabinet

@{
    ViewBag.Title = ViewRes.CabinetsStrings.Cabinets + " - " + ViewRes.CabinetsStrings.Create;
    ViewBag.Controller = "Cabinets";
    ViewBag.Action = "Cabinets.Create";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@ViewRes.CabinetsStrings.CabinetInfo</legend>

        <div class="editor-label">
            @ViewRes.CabinetsStrings.CabinetNo:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Number)
            @Html.ValidationMessageFor(model => model.Number)
        </div>

        <div class="editor-label">
            @ViewRes.CabinetsStrings.CabinetPhoneNo:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phone)
            @Html.ValidationMessageFor(model => model.Phone)
        </div>

        <div class="editor-label">
            @ViewRes.CabinetsStrings.Description:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="editor-label">
            @ViewRes.CabinetsStrings.Department:
        </div>
        <div class="editor-field">
            @Html.DropDownList("Dept",ViewRes.CabinetsStrings.ChooseDepartment)
           
        </div>
        <p>
            <input type="submit" value="@ViewRes.CabinetsStrings.AddCabinet" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(ViewRes.CabinetsStrings.ReturnToCabsList, "Index")
</div>
