<!DOCTYPE html>

@{
    //string IsFoldedClass = (string)HttpContext.Current.Profile.GetProfileGroup("MenuProps").GetPropertyValue("mfold") == "folded" ? " folded" : "";
    string IsFoldedClass = DiagnosticCenter.Classes.UserSettings.GetUserProperty("mfold") == "folded" ? " folded" : "";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/wp-theme/Styles.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/wp-theme/Colors.css")" rel="stylesheet" type="text/css" />    
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.hoverIntent.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/wp-theme/js/Scripts.js")" type="text/javascript"></script>
</head>
<body class="js admin-bar@(IsFoldedClass)">
    <div id="wrap">
        <div id="header">        
            <div id="title">
                <a href="@Url.Content("~")"><img src="@Url.Content("~/Content/wp-theme/images/icon_first_aid.png")" alt="Logo"/></a>
                <span>@if (Request.IsAuthenticated)
                        {@ViewRes.SharedStrings.Headline}
                      else {<text>Chernivtsi Diagnostic Center</text> }
                </span> 
            </div>
            <div id="lefthead">
            <ul class="dropdown dropdown-horizontal">
                @*<div id="culturedisplay">*@
                    @Html.Partial("_CultureChooserPartial")
                @*</div> 
                <div id="logindisplay">*@
                    @Html.Partial("_LogOnPartial")
                @*</div>*@
            </ul> 
            </div> 
        </div>
    
        <div id="adminmenuback"></div>
        <div id="adminmenuwrap">
            <div id="adminmenushadow"></div>
            @Html.Partial("_SideMenuPartial")
        </div>
        <div id="maincontent">
            <div class="inner">
                @RenderBody()
            </div>
        </div>
        <div id="footer">
            &copy Team2 2011
            <div class="clear"></div>
        </div>
    
    </div>
</body>
</html>
