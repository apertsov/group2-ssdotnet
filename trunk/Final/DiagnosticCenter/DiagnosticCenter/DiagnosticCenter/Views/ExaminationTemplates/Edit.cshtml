@model DiagnosticCenter.Models.ExaminationTemplate

@{
    ViewBag.Title = "Edit";
    ViewBag.Controller = "ExaminationTemplates";
}

<div id="icon-extempl-general" class="icon32"><br /></div><h2>@ExaminationRes.ExaminationStrings.ExaminationTemplate - @ExaminationRes.ExaminationStrings._Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@ExaminationRes.ExaminationStrings.ExaminationTemplate</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Body)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Body, new { cols = 50 })
            @Html.ValidationMessageFor(model => model.Body)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExaminationTypeID_ExmType)
        </div>
        <div class="editor-field">
            @Html.DropDownList("ExaminationTypeID_ExmType", String.Empty)
            @Html.ValidationMessageFor(model => model.ExaminationTypeID_ExmType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EmployeeID_Employee)
        </div>
        <div class="editor-field">
            @Html.HiddenFor(model => model.EmployeeID_Employee)
            
            @Model.Employee.Surname
            @Model.Employee.FirstName            
            @Model.Employee.Patronymic            
            @*@Html.DropDownList("EmployeeID_Employee", String.Empty)
            @Html.ValidationMessageFor(model => model.EmployeeID_Employee)*@
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsPrivate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsPrivate)
            @Html.ValidationMessageFor(model => model.IsPrivate)
        </div>

        <p>
            <input type="submit" value="@ExaminationRes.ExaminationStrings._Save" class="yt-uix-button"/>
        </p>
    </fieldset>
}
