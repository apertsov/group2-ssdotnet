@model DiagnosticCenter.Models.Patient

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@{
    ViewBag.Controller = "Patients";
    ViewBag.Action = "Patients.Edit";
}
       

<div class="patient">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Password) 
    @Html.HiddenFor(model => model.ID_Patient)
    <p align = "center"><h2>@PatientsRes.PatientsStrings.EditPatient
</h2></p>
    <table id="formholder">
        
        <tr>
            <td>
              @Html.Label(PatientsRes.PatientsStrings.Name)
            </td>
            <td>
                @Html.EditorFor(model => model.FirstName, "i_FirstName")
                @Html.ValidationMessageFor(model => model.FirstName)
             </td>
        </tr>
        <tr>
            <td>
              @Html.Label(PatientsRes.PatientsStrings.Surname)
            </td>
            <td>
                @Html.EditorFor(model => model.Surname)
                @Html.ValidationMessageFor(model => model.Surname)
             </td>
        </tr>    
        <tr>
            <td>
              @Html.Label(PatientsRes.PatientsStrings.Patronymic)
            </td>
            <td>
                @Html.EditorFor(model => model.Patronymic)
                @Html.ValidationMessageFor(model => model.Patronymic)
             </td>
        </tr>
         <tr>
            <td>
              @Html.Label(PatientsRes.PatientsStrings.Sex)<br />
            </td>
            <td>
                @Html.RadioButton("Sex", "жіноча", true)&nbsp;@PatientsRes.PatientsStrings.female
                @Html.RadioButton("Sex", "чоловіча")&nbsp;@PatientsRes.PatientsStrings.male
            </td>
        </tr>  
        <tr> 
            <td>
                @Html.Label(PatientsRes.PatientsStrings.BirthDate)
            </td>
            <td>
                @Html.EditorFor(model => model.BirthDate)
                @Html.ValidationMessageFor(model => model.BirthDate)
            </td>
        </tr>    
        <tr>
            <td>
              @Html.Label(PatientsRes.PatientsStrings.Email)
            </td>
            <td>
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
             </td>
        </tr>           
        <tr> 
            <td>
                @Html.Label(PatientsRes.PatientsStrings.Profession)
            </td>
            <td>
                @Html.EditorFor(model => model.Specialty)
                @Html.ValidationMessageFor(model => model.Specialty)
            </td>
        </tr>    
        <tr> 
            <td>
                @Html.Label(PatientsRes.PatientsStrings.City)
            </td>
            <td>
                @Html.EditorFor(model => model.City)
                @Html.ValidationMessageFor(model => model.City)
            </td>
        </tr>    
        <tr> 
            <td>
                @Html.Label(PatientsRes.PatientsStrings.Address)
            </td>
            <td>
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </td>
        </tr>    
        <tr> 
            <td>
                @Html.Label(PatientsRes.PatientsStrings.Phone)
            </td>
            <td>
                @Html.EditorFor(model => model.Phone)
                @Html.ValidationMessageFor(model => model.Phone)
            </td>
        </tr>    
        <tr> 
            <td class = "inputs">
                @Html.CheckBoxFor(model => model.Workplace)
            </td>
            <td>
                @Html.Label(PatientsRes.PatientsStrings.Employed)

            </td>
        </tr>    
        <tr> 
            <td class = "inputs">
                @Html.CheckBoxFor(model => model.Civil_Servant)
            </td>
            <td>
                @Html.Label(PatientsRes.PatientsStrings.CivilServant)
            </td>
        </tr>    
        <tr> 
            <td colspan = "2" align = "left">
                @Html.Label(PatientsRes.PatientsStrings.Comment)<br />
           
            
                @Html.TextAreaFor(model => model.Comment)<br />
                           <input type="submit" value=@PatientsRes.PatientsStrings.Save name ="save"  />
            </td>
        </tr>    
    </table>
       
   
}
</div>


