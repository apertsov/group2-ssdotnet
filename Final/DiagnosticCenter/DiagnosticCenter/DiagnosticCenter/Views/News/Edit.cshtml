@model DiagnosticCenter.Models.News

@{
    ViewBag.Title = "Редагувати новину";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="icon-news-general" class="icon32"><br /></div><h2>Редагувати новину</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Редагування новин</legend>

        @Html.HiddenFor(model => model.ID_News)

        <div class="editor-field">
            @Html.Label("Тема новини:")
            @Html.EditorFor(model => model.Topic)
            @Html.ValidationMessageFor(model => model.Topic)
        </div>

        <div class="editor-label">
            @Html.Label("Текст:");
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Text)
            @Html.ValidationMessageFor(model => model.Text)
        </div>

        <div class="editor-label">
            @Html.Label("Працівник:")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Employees", "--Виберіть працівника--")
         </div>

         <div class="editor-label">
            @Html.Label("Відділення:")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Depts","--Виберіть відділення--")
         </div>

        <p>
            <input type="submit" value="Зберегти" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Стрічка новин", "Index")
</div>