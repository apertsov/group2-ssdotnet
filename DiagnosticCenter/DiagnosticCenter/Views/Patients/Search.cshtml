@model DiagnosticCenter.Models.Patient

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style type = "text/css">
    table {margin-left: 400px;}
    table td { text-align:justify;}
</style>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Пошук пацієнтів</legend>

        <table>
            <tr>
                <td>
                    @Html.Label("Ім\'я:")<br />
                    <input type = "text" name = "FirstName"/>
                  <!--  @Html.EditorFor(model => model.FirstName) -->
                </td>
                <td>
                    @Html.Label("Прізвище:")<br />
                    <input type = "text" name="Surname"/>
                   <!-- @Html.EditorFor(model => model.Surname) -->
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Дата народження:")<br />
                     <input type = "text" name = "BirthDate"/>
                  <!--  @Html.EditorFor(model => model.BirthDate) -->
                </td>
                <td>
                    @Html.Label("Стать:")<br />
                    <input type="radio" name = "sex" value="жіноча" checked="checked" />
                   <!-- @Html.RadioButton("Sex", "жіноча")-->&nbsp;жіноча<br />
                   <input type="radio" name = "sex" value="чоловіча" />
                   <!-- @Html.RadioButton("Sex", "чоловіча")-->&nbsp;чоловіча<br />
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Місто:")<br />
                     <input type = "text" name="City"/>
                 <!--   @Html.EditorFor(model => model.City) -->
                </td>
                <td>
                    @Html.Label("Адреса:")<br />
                     <input type = "text" name="Address"/>
                  <!--  @Html.EditorFor(model => model.Address) -->
            
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Телефон:")<br />
                     <input type = "text" name="Phone"/>
                   <!-- @Html.EditorFor(model => model.Phone) -->
                </td>
                <td>
                    @Html.Label("Електронна адреса:")<br />
                     <input type = "text" name="Email"/>
                   <!-- @Html.EditorFor(model => model.Email) -->
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <!--@Html.EditorFor(model => model.Workplace) -->
                    <input type="checkbox" />
                    @Html.Label("Працевлаштований(-на)")<br />
                    <input type="checkbox" />
                   <!-- @Html.EditorFor(model => model.Civil_Servant)-->
                    @Html.Label("Держслужбовець")<br />
                    <input type="submit" value="Знайти" />
                </td>
            </tr>
        </table>
        
    </fieldset>
}

