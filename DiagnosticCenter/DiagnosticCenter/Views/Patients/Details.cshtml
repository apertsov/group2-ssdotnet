@model DiagnosticCenter.Models.Patient


<table>
    <tr>
        <th>
            Прізвище
        </th>
        <th>
            Ім'я
        </th>
        <th>
            По батькові
        </th>
        <th>
            Професія
        </th>
        <th>
            Стать
        </th>
        <th>
            Дата народження
        </th>
        <th>
            Працевлаштований(-на)
        </th>
        <th>
           Держслужбовець
        </th>
</tr>
   <tr>
        <td>
            @Html.DisplayFor(modelItem => Model.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Patronymic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Specialty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Sex)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => Model.BirthDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Workplace)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Civil_Servant)
        </td>
      </tr>  
     <tr>
        <td colspan="4">
            <br />
            <p><b>Місто:</b>&nbsp;@Html.DisplayFor(modelItem => Model.City)</p>
            <p><b>Адреса:</b>&nbsp;@Html.DisplayFor(modelItem => Model.Address)</p>
            <p><b>E-mail:</b>&nbsp;@Html.DisplayFor(modelItem => Model.Email)</p>
            <p><b>Телефон:</b>&nbsp;@Html.DisplayFor(modelItem => Model.Phone)</p>
        </td>
       
    <td colspan="4" align = "center">
      @Html.DisplayFor(modelItem => Model.Comment)
    </td>
    </tr>


</table>
