@model DiagnosticCenter.Models.News

@{
    ViewBag.Title = "Додати новину";
    ViewBag.Controller = "Новини";
    ViewBag.Action = "News.Index";
}

<h2>Додати новину</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Створення новини</legend>
        <div class="editor-field">
            @Html.Label("Тема новини:")
          
           
            @Html.EditorFor(model => model.Topic)
            @Html.ValidationMessageFor(model => model.Topic)
            
            
        </div>

        <div class="editor-label">
            @Html.Label("Зміст:")
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Text)
           @Html.ValidationMessageFor(model => model.Text)
        </div>

        <div class="editor-field">
            @Html.Label("Працівник:")
            
            @Html.DropDownList("Empls")
            
        </div>

        <div class="editor-label">
            @Html.Label("Відділення:")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Depts")
        </div>

        <div class="editor-label">
            @Html.Label("Тип новини:")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Ntypes")
        </div>

        <p>
            <input type="submit" value="Додати" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Стрічка новин", "Index")
</div>
