@model PagedList.IPagedList<DiagnosticCenter.Models.EmployeeVM>
@using (Html.BeginForm())
{ 
    <p> 
        Пошук по прізвищу: @Html.TextBox("SearchString") &nbsp; 
        <input type="submit" value="Знайти" /></p> 
}
@{
    ViewBag.Controller = "Employees";
    ViewBag.Action = "Employees.Index";
}
<table>
    <tr>
        <th>
          @Html.ActionLink("Прізвище", "Index", new { sortOrder = ViewBag.SurnameSortParm })
        </th>
        <th>
             @Html.ActionLink("Ім'я", "Index", new { sortOrder = ViewBag.FirstNameSortParm })
           
        </th>
        <th>
            По батькові
        </th>
        <th>
            Посада
        </th>
        <th>
            @Html.ActionLink("Відділення", "Index", new { sortOrder = ViewBag.DepartmentSortParm })
            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.patronymic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.department)
        </td>
        <td>
            @Html.ActionLink("Правити", "Edit", new { id=item.id }) |
            @Html.ActionLink("Деталі", "Details", new { id=item.id }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
<div> 
    Сторінка @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) з @Model.PageCount 
    &nbsp; 
    @if (Model.HasPreviousPage)
    { 
        @Html.ActionLink("<<", "Index", new { page = 1, }) 
        @Html.Raw("&nbsp;"); 
        @Html.ActionLink("< Попередня", "Index", new { page = Model.PageNumber - 1 }) 
    }
    else
    { 
        @:<< 
        @Html.Raw("&nbsp;"); 
        @:< Попередня 
    } 
    &nbsp; 
    @if (Model.HasNextPage)
    { 
        @Html.ActionLink("Наступна >", "Index", new { page = Model.PageNumber + 1 }) 
        @Html.Raw("&nbsp;"); 
        @Html.ActionLink(">>", "Index", new { page = Model.PageCount }) 
    }
    else
    { 
        @:Наступна > 
        @Html.Raw("&nbsp;") 
        @:>> 
    } 
</div>